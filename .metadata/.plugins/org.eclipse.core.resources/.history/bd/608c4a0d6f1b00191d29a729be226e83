package empleado;

public class Empleado {
	
	private String nombre;
	private int sueldo;
	private String puesto;

	public Empleado(String nombre) {
		this.nombre=nombre;
		this.sueldo = 1000;
		this.puesto = "administrador";
	}
	public void setSueldo(int subido) {
		this.sueldo+=subido;
		if(this.sueldo >1500 ) {
			this.puesto = "RRHH";
		}
		else {
			this.puesto = "Administrador";
		}
		public int getSueldo() {
			return this.sueldo;
		}
	}
}
